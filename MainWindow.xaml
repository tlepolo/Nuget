                        <TextBox Text="*"  hc:TitleElement.Title="分钟"  Name="txtMinuteCron"/>
                        <TextBox Text="*"  hc:TitleElement.Title="小时"  Name="txtHourCron"/>
                        <TextBox Text="*"  hc:TitleElement.Title="日"  Name="txtDayCron"/>
