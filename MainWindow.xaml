            <TabItem Header="星期">
                <DockPanel Margin="15">
                    <RadioButton Content="每周 允许的通配符 [, - * / ? L C #] (1表示星期天, 2表示星期一)"/>
                    <RadioButton Content="不指定"/>
                    <RadioButton>
                        <DockPanel>
                            <TextBlock Text="周期从星期"/>
                            <hc:NumericUpDown Value="1"/>
                            <TextBlock Text=" - "/>
